{
  "name": "tm-scripts",
  "version": "1.0.0",
  "description": "Collection of TamperMonkey scripts",
  "main": "index.js",
  "scripts": {
    "test": "jest tests/test-sensibull.js",
    "test:watch": "jest tests/test-sensibull.js --watch"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "scripts/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.js"
    ]
  }
}